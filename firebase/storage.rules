rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access their own backup files
    match /backups/{userId}/{filename} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public read access for deck files in Decks folder
    match /Decks/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only admins can upload via console
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
