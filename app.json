{
  "expo": {
    "name": "Enqode",
    "slug": "memorize-app",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/enqode_app_main_image_for_homescreen.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "main": "./App.tsx",
    "scheme": "enqode",
    "_comment": "Apple Developer account active - Sign in with Apple and Push Notifications can be enabled in Xcode",
    "splash": {
      "image": "./assets/enqode_main_transparent.png",
      "resizeMode": "contain",
      "backgroundColor": "#0E0E10"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.enqode.app",
      "usesAppleSignIn": true,
      "buildNumber": "2",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to unlock the app",
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSDocumentsFolderUsageDescription": "This app needs access to documents to import Anki decks",
        "NSCameraUsageDescription": "This app needs access to the camera to capture images for flashcards",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select images for flashcards",
        "NSMicrophoneUsageDescription": "This app needs access to the microphone to record audio for flashcards",
        "ITSAppUsesNonExemptEncryption": false,
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": ["com.googleusercontent.apps.953455180571-8jc7qunauq08q73uiehk7uou8d55a8mf"]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/enqode_app_main_image_for_homescreen.png",
        "backgroundColor": "#0E0E10"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.enqode.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-sqlite",
      "expo-asset",
      "expo-apple-authentication",
      [
        "expo-notifications",
        {
          "icon": "./assets/enqode_app_main_image_for_homescreen.png",
          "color": "#ffffff",
          "sounds": []
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "17.0"
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "b58c2019-3374-450f-96ab-3260e67bb02f"
      },
      "googleIosClientId": "953455180571-8jc7qunauq08q73uiehk7uou8d55a8mf.apps.googleusercontent.com",
      "googleWebClientId": "953455180571-phelu268iaudi1u5cuhgp0pm3k0ftaan.apps.googleusercontent.com"
    }
  }
}
